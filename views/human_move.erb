
<script type="text/javascript">

$( document ).ready(function() {
var availableMoves = [<%= @available_moves.map(&:to_s).join(", ") %>];

$("#move_form").submit(function(e){
		var userInput = parseInt($(".move").val())
	if(availableMoves.indexOf(userInput) == -1)
			{
			e.preventDefault();
			alert("Sorry, this is not a valid move. Please try again.");
		}
	});
});


</script>


<div class="board_display"><%=session[:board].display_board%></div>
<br><br>
Where would you like to place your mark? 	

<br><br>
<form id="move_form" action='/human_move' method="post">
	<input type="number" name="move" min="1" max="9" class="move">
	<input type="submit" id="form_submit" name="submit_btn">
</form>